{% extends "base.html" %}

{% block head_extras %}
<style>
ul.first_round {
    font-size: 10px;
    width: 80px;
}
li.game {
    padding: 2px 0px
}
li.odd {
    border-top: 1px solid #000000;
    margin-top: 10px;
}
li.even {
    border-bottom: 1px solid #000000;
}
ul.left li {
    border-right: 1px solid #000000;
}
</style>
{% endblock head_extras %}

{% block content_wide %}
<ul class="first_round left">
{% for game in first_round_by_region.M %}
    <li class="game odd">{{ game.opponent_set.all.0.team.ranking }} {{ game.opponent_set.all.0.team.team.get_school_abbrev }}</li>
    <li class="game even">{{ game.opponent_set.all.1.team.ranking }} {{ game.opponent_set.all.1.team.team.get_school_abbrev }}</li>
{% endfor %}
</ul>
{% endblock content_wide %}
